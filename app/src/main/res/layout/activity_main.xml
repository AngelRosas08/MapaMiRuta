<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="720dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <fragment
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"/>

    </FrameLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/btnSatelite"
        android:layout_marginLeft="5dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Satelite"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:outlineSpotShadowColor="@color/teal_700"
        android:drawableLeft="@drawable/ic_sat"/>
    <Button
        android:id="@+id/btnTerrain"
        android:layout_marginLeft="10dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Terrain"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:outlineSpotShadowColor="@color/teal_700"
        android:drawableLeft="@drawable/ic_ter"/>
    <Button
        android:id="@+id/btnNormal"
        android:layout_marginLeft="10dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Normal"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:outlineSpotShadowColor="@color/teal_700"
        android:drawableLeft="@drawable/ic_nor"/>

    </LinearLayout>
</LinearLayout>